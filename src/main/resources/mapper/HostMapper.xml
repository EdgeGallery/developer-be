<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.edgegallery.developer.mapper.HostMapper">

    <resultMap id="HostMap"
               type="org.edgegallery.developer.model.workspace.MepHost">
        <id property="hostId" column="host_id"/>
        <result property="userId" column="user_id"/>
        <result property="name" column="name"/>
        <result property="address" column="address"/>
        <result property="architecture" column="architecture"/>
        <result property="status" column="status"/>
        <result property="protocol" column="protocol"/>
        <result property="ip" column="ip"/>
        <result property="port" column="port"/>
        <result property="os" column="os"/>
        <result property="portRangeMin" column="port_range_min"/>
        <result property="portRangeMax" column="port_range_max"/>
    </resultMap>

    <insert id="saveHost"
            parameterType="org.edgegallery.developer.model.workspace.MepHost">
        insert into
        tbl_service_host (host_id, user_id, name, address, architecture, status, ip, port, os, port_range_min, port_range_max, protocol)
        values
        ( #{hostId}, #{userId}, #{name}, #{address}, #{architecture}, #{status}, #{ip},
        #{port}, #{os}, #{portRangeMin}, #{portRangeMax}, #{protocol})
    </insert>

    <select id="getAllHosts" resultMap="HostMap">
        SELECT
        *
        FROM
        tbl_service_host
    </select>

   <select id="getHostsByUserId" resultMap="HostMap">
        SELECT
        *
        FROM
        tbl_service_host
        WHERE
        user_id = #{userId}
   </select>

   <select id="getHostsByStatus" resultMap="HostMap">
        SELECT
        *
        FROM
        tbl_service_host
        WHERE
        status = #{param1} and user_id = #{param2} and architecture = #{param3}
   </select>

    <select id="getNormalHosts" resultMap="HostMap">
        SELECT
        *
        FROM
        tbl_service_host
        WHERE
        status = 'NORMAL'
    </select>

    <select id="getHost" parameterType="java.lang.String" resultMap="HostMap">
        SELECT
        *
        FROM
        tbl_service_host
        WHERE
        host_id = #{hostId}
    </select>

    <update id="updateHost" parameterType="org.edgegallery.developer.model.workspace.MepHost">
        UPDATE
        tbl_service_host
        SET ip=#{ip}, port=#{port}
        WHERE
        user_id = #{userId}
    </update>

    <delete id="deleteHost" parameterType="java.lang.String">
        DELETE FROM
        tbl_service_host
        WHERE
        host_id = #{hostId}
    </delete>

</mapper>