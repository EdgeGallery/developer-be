<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.edgegallery.developer.mapper.application.NetworkMapper">
  <resultMap id="NetworkMap" type="org.edgegallery.developer.model.application.vm.Network">
    <id property="id" column="id"/>
    <result property="name" column="name"/>
    <result property="description" column="description"/>
  </resultMap>

  <sql id="NetworkAllColumn">
    id, name, description
  </sql>

  <insert id="createNetwork">
    insert into tbl_network (id, app_id, name, description)
    values
    ( #{network.id}, #{applicationId}, #{network.name}, #{network.description})
  </insert>

  <update id="modifyNetwork" parameterType="org.edgegallery.developer.model.application.vm.Network">
    UPDATE
    tbl_network
    SET
    name = #{name}, description = #{description}
    WHERE
    id = #{id}
  </update>

  <delete id="deleteNetwork" parameterType="String">
    DELETE FROM tbl_network WHERE id = #{id};
  </delete>

  <delete id="deleteNetworksByAppId" parameterType="String">
    DELETE FROM tbl_network WHERE app_id = #{applicationId};
  </delete>


  <select id="getNetworkById" parameterType="String" resultMap="NetworkMap">
    SELECT
    <include refid="NetworkAllColumn"/>
    FROM tbl_network where id = #{id}
  </select>

  <select id="getNetworkByAppId" parameterType="String" resultMap="NetworkMap">
    SELECT
    <include refid="NetworkAllColumn"/>
    FROM tbl_application where app_id = #{applicationId}
  </select>

</mapper>