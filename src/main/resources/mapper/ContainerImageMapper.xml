<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.edgegallery.developer.mapper.ContainerImageMapper">

    <resultMap id="ContainerImageMap"
               type="org.edgegallery.developer.model.containerimage.ContainerImage">
        <id property="imageId" column="image_id"/>
        <result property="imageName" column="image_name"/>
        <result property="imageVersion" column="image_version"/>
        <result property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="uploadTime" column="upload_time"/>
        <result property="createTime" column="create_time"/>
        <result property="imageStatus" column="image_status"/>
        <result property="imageType" column="image_type"/>
        <result property="imagePath" column="image_path"/>
        <result property="fileName" column="file_name"/>
    </resultMap>

    <insert id="createContainerImage"
            parameterType="org.edgegallery.developer.model.containerimage.ContainerImage">
        insert into
        tbl_container_image (image_id, image_name, image_version, user_id, user_name, upload_time,
        create_time,image_status,image_type,image_path,file_name)
        values
        ( #{imageId}, #{imageName}, #{imageVersion}, #{userId}, #{userName}, #{uploadTime},
        #{createTime},#{imageStatus},#{imageType},#{imagePath},#{fileName})
    </insert>


    <select id="getContainerImage" parameterType="String" resultMap="ContainerImageMap">
        SELECT
        *
        FROM
        tbl_container_image
        WHERE
        image_id = #{imageId}
    </select>

    <select id="getAllImage" resultMap="ContainerImageMap">
        SELECT
        *
        FROM
        tbl_container_image
    </select>

    <select id="getAllImageByAdminAuth" parameterType="java.util.Map"
            resultMap="ContainerImageMap">
        SELECT
        image_id,image_name,image_version,user_id,user_name,
        to_char(create_time, 'YYYY-MM-DD HH24:MI:SS') as create_time,
        to_char(upload_time, 'YYYY-MM-DD HH24:MI:SS') as upload_time,
        image_status,image_type,image_path,file_name
        FROM
        tbl_container_image
        <where>
            <if test="imageName != null and imageName !=''">
                and lower(image_name) like lower(CONCAT('%', #{imageName}, '%'))
            </if>
            <if test="imageType != null and imageType.size()>0">
                and image_type in
                <foreach collection="imageType" item="item" index="index" open="(" close=")" separator=",">
                    #{item}
                </foreach>
            </if>
            <if test="imageStatus != null and imageStatus.size()>0">
                and image_status in
                <foreach collection="imageStatus" item="item" index="index" open="(" close=")" separator=",">
                    #{item}
                </foreach>
            </if>
            <if test="createTimeBegin != null and createTimeBegin != ''">
                <![CDATA[ and create_time >= to_timestamp(#{createTimeBegin}, 'YYYY-MM-DD HH24:MI:SS') ]]>
            </if>
            <if test="createTimeEnd != null and createTimeEnd != ''">
                <![CDATA[ and create_time <= to_timestamp(#{createTimeEnd}, 'YYYY-MM-DD HH24:MI:SS') ]]>
            </if>
        </where>
        <if test="sortBy != null and sortBy != '' and sortOrder != null and sortOrder != ''">
            order by ${sortBy} ${sortOrder}
        </if>
    </select>

    <select id="getAllImageByOrdinaryAuth"
            parameterType="java.util.Map"
            resultMap="ContainerImageMap">
        select * from (
        SELECT
        image_id,image_name,image_version,user_id,user_name,
        to_char(create_time, 'YYYY-MM-DD HH24:MI:SS') as create_time,
        to_char(upload_time, 'YYYY-MM-DD HH24:MI:SS') as upload_time,
        image_status,image_type,image_path,file_name
        FROM
        tbl_container_image
        <where>
            <if test="userId != null and userId !=''">
                and user_id =#{userId} or image_type = 'public'
            </if>
        </where>
        <if test="sortBy != null and sortBy != '' and sortOrder != null and sortOrder != ''">
            order by ${sortBy} ${sortOrder}
        </if>
        ) a
        <where>
            <if test="imageName != null and imageName !=''">
                and lower(a.image_name) like lower(CONCAT('%', #{imageName}, '%'))
            </if>
            <if test="imageType != null and imageType.size()>0">
                and image_type in
                <foreach collection="imageType" item="item" index="index" open="(" close=")" separator=",">
                    #{item}
                </foreach>
            </if>
            <if test="imageStatus != null and imageStatus.size()>0">
                and image_status in
                <foreach collection="imageStatus" item="item" index="index" open="(" close=")" separator=",">
                    #{item}
                </foreach>
            </if>
            <if test="createTimeBegin != null and createTimeBegin != ''">
                <![CDATA[ and to_timestamp(a.create_time,'YYYY-MM-DD HH24:MI:SS') >= to_timestamp(#{createTimeBegin}, 'YYYY-MM-DD HH24:MI:SS') ]]>
            </if>
            <if test="createTimeEnd != null and createTimeEnd != ''">
                <![CDATA[ and to_timestamp(a.create_time,'YYYY-MM-DD HH24:MI:SS') <= to_timestamp(#{createTimeEnd}, 'YYYY-MM-DD HH24:MI:SS') ]]>
            </if>
        </where>
    </select>

    <select id="getAllImageByAdmin" resultMap="ContainerImageMap">
        select * from tbl_container_image
    </select>

    <delete id="deleteContainerImageByOrdinary" parameterType="java.lang.String">
        delete from tbl_container_image
        where image_id=#{imageId} and user_id =#{userId} and user_name =#{userName}
    </delete>

    <update id="updateContainerImageType" parameterType="java.lang.String">
        update tbl_container_image
        set image_type=#{imageType}
        where image_id=#{imageId} and user_id =#{userId}
    </update>

    <delete id="deleteContainerImageByAdmin" parameterType="java.lang.String">
        delete from tbl_container_image where image_id=#{imageId}
    </delete>

</mapper>